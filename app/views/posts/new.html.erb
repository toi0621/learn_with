<p id="notice"></p>
<div class="container mt-4">
 <div class="row">
  <div class="col-8 mx-auto">
  <center><h2 style="font-family: impact;">New Post</h2></center>
  <!--エラーメッセージ-->
   <% if @post.errors.any? %>
    <h5 class="text-danger"><%= @post.errors.count %> error</h5>
    <ul>
     <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>
   
  <div class="col-md-12">
   <%= form_with model:@post, local:true do |f| %>
    <div class="form-group">
     <strong><label for="post_title">Title</label></strong>
     <%= f.text_field :title, class: "form-control", autofocus: true, id:"inputName", rows:"1" %>
    </div>

    <!--セレクトボックス-->
    <div class="form-group">
     <strong><label for="post_title">Genre</label></strong><br>
       <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
    </div>

    <div class="form-group">
     <strong><label for="post_body">Post Body</label></strong>
     <%= f.text_area :body,class: "form-control", autofocus: true, id:"inputName", rows:"10" %>
    </div>

    <div class="form-group">
    <%= f.submit "Create Post", class: "btn btn-primary" %>
    </div>

    <%= link_to "投稿一覧へ", posts_path %>

   <% end %>
 </div>
</div>
</div>
</div>
