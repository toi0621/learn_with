<p id="notice"></p>
<div class="container mt-4">
 <div class="row">
  <div class="col-5 mx-auto">
  <center><h2 style="font-family: impact;">User Info</h2></center>
    <% if @user.errors.any? %>
     <%= @user.errors.count %>error prohibited this obj from being saved:
     <% @user.errors.full_messages.each do |message| %>
      <%= message %>
     <% end %>
    <% end %>
    <%= form_with model:@user, local:true do |f| %>
     <div class="form-group">
      <strong><label for="user_name">Name</label></strong>
      <%= f.text_field :name, class: "form-control", autofocus: true, id:"inputName", rows:"1" %>
     </div>
     
     <div class="form-group">
      <strong><label for="user_image">Image</label></strong>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
     </div>
     
     <div class="form-group">
      <strong><label for="user_profile">Introduction</label></strong>
      <%= f.text_area :profile, class: "form-control", autofocus: true, id:"inputName", rows:"10" %>
     </div>
     
     <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-primary" %>
     </div>
     
    <% end %>
  </form>
  </div>
 </div>
</div>