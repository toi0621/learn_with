 <center><h1 style="font-family: impact;">user</h1></center>
  <center><%= attachment_image_tag user, :profile_image, :fill,100,100, format: 'jpeg', fallback: "no_image.jpg", size:"100x100" %></center>
  <table class="table">
   <tbody>
    <tr>
	    <th>名前</th>
	    <th><%= user.name %></th>
    </tr>

    <tr>
     <th>ひとこと️</th>
     <th><%= user.profile %></th>
    </tr>

    <tr>
     <th>フォロー中</th>
     <th>
      <%= link_to user.followings.count, followings_user_path(user) %>
     </th>
    </tr>

    <tr>
     <th>フォロワー</th>
     <th>
      <%= link_to user.followers.count, followers_user_path(user) %>
     </th>
    </tr>

    <tr>
     <th colspan="3">
     <% if user != current_user %>
      <% if current_user.already_followed?(user) %>
       <%= link_to user_relationships_path(user), method: :delete do %>
        <button class="btn btn-primary">フォロー中</button>
       <% end %>
      <% else %>
       <%= link_to user_relationships_path(user), method: :post do %>
        <button class="btn btn-primary">フォローする</button>
       <% end %>
      <% end %>
     <% end %>
     </th>

    </tr>

   </tbody>
  </table>
  <div class="mr-3">
   <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
    <% end %>
   <% end %>
  </div>




