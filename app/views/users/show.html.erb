<body>
 <main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'users/info', user:@user %>
     
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>Posts</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
       <% @posts.each do |post| %>
        <tr>
         <td>
          <%= link_to user_path(book.user) do %>
           <%= attachment_image_tag @user, :profile_image_id, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
         </td>
         <td>
          <%=link_to post.title, post_path(post) %>

         </td>

         <td>
          <%= post.body %>
         </td>
         
         <td>
          <p>コメント件数：<%= post.post_comments.count %></p>
         </td>
        </tr>
       <% end %>
       </tbody>
      </table>
    </div>
   </div>
  </div>
 </main>
</body>
