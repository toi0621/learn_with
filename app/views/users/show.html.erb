<body>
 <main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <!--ユーザ情報-->
    <div class="col-md-3">
     <%= render 'users/info', user:@user %>
    </div>
    <div class="col-md-8 offset-md-1 mt-3">
    <h2 style="font-family: impact;">My Posts</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>User</th>
         <th>genre</th>
         <th>Title</th>
         <th></th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
       <% @posts.each do |post| %>
        <tr>
         <td>
          <%= link_to user_path(post.user) do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
         </td>

         <td>
          <%=link_to post.title, post_path(post) %>
         </td>

         <td>
          <%= post.body %>
         </td>

        </tr>
       <% end %>
       </tbody>
      </table>
    </div>
   </div>
  </div>
 </main>
</body>
