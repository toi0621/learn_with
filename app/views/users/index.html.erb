  <div class="container px-5 px-sm-0">
   <div class="row">
    <!--ユーザ情報-->
    <div class="col-md-3">
     <%= render 'users/info', user:@user %>
   </div>
    <div class="col-md-8 offset-md-1 mt-3">
     <h2 style="font-family: impact;">Users</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
       <% @users.each do |user| %>
        <tr>
         <td>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
         </td>

         <td>
          <%= user.name %>
         </td>

         <td>
          <p>フォロー数：<%= user.followings.count %></p>
         </td>

         <td>
          <p>フォロワー数：<%= user.followers.count %></p>
         </td>

         <td>
         <% if user != current_user %>
          <% if current_user.already_followed?(user) %>
           <%= link_to "フォローを外す", user_relationships_path(user), method: :delete %>
          <% else %>
           <%= link_to "フォローする",user_relationships_path(user), method: :post %>
          <% end %>
         <% end %>
         </td>

         <td>
          <%= link_to "Show", user_path(user) %>
         </td>

        </tr>
       <% end %>
       </tbody>
      </table>
    </div>
   </div>
  </div>