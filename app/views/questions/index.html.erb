<body>
 <main>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <!--ユーザー情報-->
    <div class="col-md-3">
     <%= render 'users/info', user:@user %>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2 style="font-family: impact;">Q&A</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>Image</th>
         <th>Name</th>
         <th>Title</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
       <% @questions.each do |question| %>
        <tr>
         <td>
          <%= link_to user_path(question.user) do %>
           <%= attachment_image_tag question.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
         </td>

         <td>
          <%= link_to question.title, question_path(question.id) %>
         </td>
         
        </tr>
       <% end %>
       </tbody>
      </table>
    </div>
   </div>
  </div>
 </main>
</body>
