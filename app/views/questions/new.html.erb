<p id="notice"></p>
<div class="container mt-4">
 <div class="row">
  <div class="col-8 mx-auto">
   <center><h2 style="font-family: impact;">New Question</h2></center>
    <!--エラーメッセージ-->
   <% if @question.errors.any? %>
    <h5 class="text-danger"><%= @question.errors.count %> error</h5>
    <ul>
     <% @question.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>

   <div class="col-md-12">
    <%= form_with model:@question, local:true do |f| %>
     <div class="form-group">
      <label for="question_title">Title</label>
      <%= f.text_field :title, class: "form-control", autofocus: true, id:"inputName", rows:"1" %>
     </div>

     <!--セレクトボックス-->
     <div class="form-group">
      <strong><label for="question_title">Genre</label></strong><br>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
     </div>

     <div class="form-group">
      <label for="question_body">Question</label>
      <%= f.text_area :body,class: "form-control", autofocus: true, id:"inputName", rows:"10" %>
     </div>

     <div class="form-group">
      <%= f.submit "Create Question", class: "btn btn-primary" %>
     </div>
    <% end %>
   </div>
  </div>
 </div>
</div>
